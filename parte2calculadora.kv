BoxLayout:
    orientation: 'vertical'
    padding: 10

    TextInput:
        id: display
        font_size: 30
        size_hint_y: 0.3
        multiline: False
        readonly: True
        text: ''

    GridLayout:
        cols: 4
        spacing: 10
        padding: 10

        Button:
            text: '7'
            on_press: root.update_display('7')

        Button:
            text: '8'
            on_press: root.update_display('8')

        Button:
            text: '9'
            on_press: root.update_display('9')

        Button:
            text: '/'
            on_press: root.update_display('/')

        Button:
            text: '4'
            on_press: root.update_display('4')

        Button:
            text: '5'
            on_press: root.update_display('5')

        Button:
            text: '6'
            on_press: root.update_display('6')

        Button:
            text: '*'
            on_press: root.update_display('*')

        Button:
            text: '1'
            on_press: root.update_display('1')

        Button:
            text: '2'
            on_press: root.update_display('2')

        Button:
            text: '3'
            on_press: root.update_display('3')

        Button:
            text: '-'
            on_press: root.update_display('-')

        Button:
            text: 'C'
            on_press: root.clear_display()

        Button:
            text: '0'
            on_press: root.update_display('0')

        Button:
            text: '='
            on_press: root.calculate()

        Button:
            text: '+'
            on_press: root.update_display('+')
